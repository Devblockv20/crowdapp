<div class="row zero-bottom-margin">
	<div class="col s12 zero-side-padding">
		<div class="card z-depth-0">
			<div class="card-content black-text z-depth-0">
				<div class=" center-align">
					<%=	image_tag @user_profile.avatar.url, class: "circle responsive-img"%>
				</div>
				<div class="center-align">	
					<h3><%= @user_profile.name %></h3>
					
					<div id="bio">
						<p>Bio: <%= @user_profile.bio %></p>
					</div>
					<div id="location">
						<i class="Tiny material-icons">location_on</i>
						<%= @user_profile.location %>
					</div>
					<div id="create_at">
						<i class="Tiny material-icons">date_range</i>
						Joined At <%= @user_profile.created_at.strftime("%B %Y")%>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
